
.discoverContainer
  height: 100%
  display: flex
  flex-direction: column

.discoverTop
  height: 80px
  background: #fff
  width: 100%
  flex-shrink: 0
  display: flex
  .DiscoverTopItem
    flex: 1
    padding-top: 10px
    text-align: center
    .round
      width: 40px
      height: 40px
      border-radius: 50%
      margin: 0 auto
    .label
      font-size: 12px
      line-height: 2.5
      color: #999

.discoverList
  flex: 1
  overflow-y: auto
  touch-action: pan-x pan-y
  -webkit-overflow-scrolling: touch
  width: 100%
  margin: 10px 0
  box-sizing: border-box
  padding: 0 10px
  .discoverListTitle
    box-sizing: border-box
    padding: 0 10px
    background: #ffffff
    font-size: 18px
    line-height: 40px
    color: #333333
    background: #fff
  .discoverListItem
    position: relative
    margin-bottom: 10px
    .desc
      position: absolute
      background: rgba(0,0,0,0.7)
      width: 100%
      bottom: 0
      left: 0
      box-sizing: border-box
      padding: 0 10px
      text-align: right
      color: #ffffff
      line-height: 30px
      font-size: 14px
